@page
@model InventorySupplyWebApp.Pages.Warehouse.IndexModel
@{
    ViewData["Title"] = "Inventory Overview";
}

<h2>@ViewData["Title"]</h2>

@if (Model.InventoryList.Any())
{
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Product</th>
                <th>Warehouse</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.InventoryList)
        {
            <tr>
                <td>@item.Product.Name</td>
                @* <td>@item.Warehouse.Name</td> *@
                <td>@item.QuantityInStock</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No inventory data found.</div>
}
