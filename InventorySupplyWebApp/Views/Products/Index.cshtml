@model IEnumerable<InventorySupply.DAL.Models.Product>

<h2>Products</h2>

<!-- Create Button -->
<a href="@Url.Action("Create", "Products")" class="btn btn-primary">Create New Product</a>

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Supplier</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Description</td>
            <td>@product.Price</td>
            <td>@(product.Supplier?.Name ?? "No Supplier")</td>
            <td>
                <!-- Edit and Delete buttons (if needed) -->
                <a href="@Url.Action("Edit", "Products", new { id = product.ProductId  })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Details", "Products", new { id = product.ProductId  })" class="btn btn-primary btn-sm">Details</a>
                <a href="@Url.Action("Delete", "Products", new { id = product.ProductId  })" class="btn btn-danger btn-sm">Delete</a>
        </td>                                      
        </tr>
    }
    </tbody>
</table>