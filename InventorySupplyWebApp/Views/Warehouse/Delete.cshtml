@model InventorySupply.DAL.Models.Warehouse

@{
    ViewData["Title"] = "Delete Warehouse";
}

<h2>Delete Warehouse</h2>

<h4>Are you sure you want to delete this Warehouse?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        @* <dt class="col-sm-2">Contact</dt> *@
        @* <dd class="col-sm-10">@Model.ProductStocks</dd> *@
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="WarehouseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
