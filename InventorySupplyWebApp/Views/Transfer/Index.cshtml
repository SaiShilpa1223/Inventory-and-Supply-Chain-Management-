@model IEnumerable<InventorySupply.DAL.Models.TransferProduct>

<h2>Transfers</h2>

<p>
    @if (User.IsInRole("Manager") || User.IsInRole("Admin"))

                    {
                        <a asp-action="Create" class="btn btn-primary">Create New Transfer</a>
                    }
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>From Warehouse</th>
            <th>To Warehouse</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transfer in Model)
        {
            <tr>
                <td>@transfer.Product?.Name</td>
                <td>@transfer.TranferQty</td>
                <td>@transfer.FromWarehouseNav?.Name</td>
                <td>@transfer.ToWarehouseNav?.Name</td>
                <td>@transfer.TransferDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>