@model InventorySupply.DAL.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<h4>Are you sure you want to delete this supplier?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>
        
        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Address</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SupplierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
