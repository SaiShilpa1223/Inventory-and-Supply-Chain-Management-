@model InventorySupply.DAL.Models.InventoryItem

<h2>Delete Inventory Item</h2>

<div>
    <h4>Are you sure you want to delete this inventory item?</h4>
    <dl class="row">

        <dt class="col-sm-2">Quantity in Stock</dt>
        <dd class="col-sm-10">@Model.QuantityInStock</dd>

        <dt class="col-sm-2">Reorder Level</dt>
        <dd class="col-sm-10">@Model.ReorderLevel</dd>

        <dt class="col-sm-2">Date Added</dt>
        <dd class="col-sm-10">@Model.LastModified</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="InventoryItemId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
